{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deno run",
      "type": "shell",
      "command": "deno",
      "args": ["run", "-A", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
